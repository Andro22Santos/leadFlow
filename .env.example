# ─── Servidor ────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ─── Banco de Dados ──────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/leadflow

# ─── IA (escolher um ou ter ambos disponíveis) ───────────
AI_PROVIDER=openai
OPENAI_API_KEY=sk-proj-...
GEMINI_API_KEY=AIzaSy...

# ─── Papel e Modo da IA ─────────────────────────────────
# AI_ROLE: seller (vender carros) | buyer (comprar do cliente) | hybrid (compra e venda)
AI_ROLE=hybrid
# AI_MODE: high_conversion | low_pressure | balanced
AI_MODE=balanced
# Nome da marca que a IA representa
AI_BRAND_NAME=MinhaLoja
# Objetivo principal: agendamento | venda | avaliacao
AI_GOAL=agendamento
# Estilo do prompt: standard | compact | aggressive | premium
PROMPT_STYLE=standard

# ─── Google Sheets ────────────────────────────────────────
GOOGLE_SHEETS_ID=<ID_DA_PLANILHA_AQUI>
GOOGLE_SERVICE_ACCOUNT_JSON=./google-service-account.json

# ─── WhatsApp ─────────────────────────────────────────────
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# ─── Telegram (notificações - opcional) ───────────────────
TELEGRAM_BOT_TOKEN=<token do @BotFather>
TELEGRAM_CHAT_ID=<id do chat ou grupo>

# ─── Configurações do Bot ─────────────────────────────────
BOT_NAME=LeadFlow
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
WORKING_DAYS=1,2,3,4,5,6
